<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

      <material name ="white">
        <color rgba = "1 1 1 1"/>
    </material>

    <material name ="orange">
        <color rgba = "1 0.3 0.1 1"/>
    </material>

    <material name ="blue">
        <color rgba = "0.2 0.2 1 1"/>
    </material>

    <material name ="black">
        <color rgba = "0 0 0 1"/>
    </material>

    <material name ="red">
        <color rgba = "1 0 0 1"/>
    </material>

    <!--BASE LINK-->

    <link name="base_link">

    </link>

    <joint name = "chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.063 0 0"/>

    </joint>

    <!--BASE FOOTPRINT LINK-->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz = "0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

    <!--CHASSIS LINK-->

    <link name="chassis">
        <visual>
            <origin xyz="0.1 0 0.075"/>
            <geometry>
                <box size ="0.2 0.15 0.15"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin xyz="0.1 0 0.075" rpy = "0 0 0"/>
            <geometry>
                <box size ="0.2 0.15 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.12" x = "0.2" y = "0.15" z = "0.15">
            <origin xyz="0.1 0 0.075" rpy ="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Red</material>
    </gazebo>

    <!--LEFT WHEEL JOINT-->

    <joint name = "left_wheel_joint" type="continuous">
        <parent link = "base_link"/>
        <child link = "left_wheel"/>
        <origin xyz="0 0.095 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name = "left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0355" length="0.021"/>
            </geometry>
            <material name ="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0355"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass = "0.075" length="0.021" radius="0.0355">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--RIGHT WHEEL JOINT-->  

    <joint name = "right_wheel_joint" type="continuous">
        <parent link = "base_link"/>
        <child link = "right_wheel"/>
        <origin xyz="0 -0.095 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name = "right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0355" length="0.021"/>
            </geometry>
            <material name ="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0355"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass = "0.075" length="0.021" radius="0.0355">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--CASTER WHEEL JOINT-->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz = "0.175 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.037"/>
            </geometry>
            <material name ="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.037"/>
            </geometry>
        </collision>
        <!--original radius 0.02475-->
        <xacro:inertial_sphere mass = "0.1" radius="0.037">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>
    


</robot>